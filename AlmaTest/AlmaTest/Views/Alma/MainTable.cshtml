@model AlmaTest.Models.MainTableViewModel

<div style="margin-top: 10px;" class="row">
    <div style="margin-bottom: 10px;" class="col-md-offset-4 col-md-4">
        <form method="GET" class="form-inline">
            <div class="form-group">
                <input id="client-name" class="form-control" type="text" name="client" @if (Model.Client != null) { string value = "value=" + Model.Client;} placeholder="Distributor..." data-provide="typeahead"/>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <table id="clients" class="table table-hover">
            <thead>
                <tr style="background-color: #CFCFCF;">
                    <th>Client</th>
                    <th>Database</th>
                    <th>Host</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr id="@client.ID">
                        <td>@client.Client</td>
                        <td>@client.Baza</td>
                        <td>@client.HostName</td>
                        <td>
                            @{
                                DateTime date = client.Date ?? DateTime.MinValue;
                                @date.ToShortDateString()
                            }
                        </td>
                    </tr>
                                }
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    <a href="?page=@(Model.Page - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li><a href="?page=1" class="active">1</a></li>
                <li><a href="?page=2">2</a></li>
                <li><a href="?page=3">3</a></li>
                <li><a href="?page=4">4</a></li>
                <li><a href="?page=5">5</a></li>
                <li><a class="disabled">...</a></li>
                <li><a href="?page=5">255</a></li>
                <li>
                    <a href="?page=@(Model.Page + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="col-md-6">
        <h1>This is not supposed to move.</h1>
        <h2>This is not supposed to move as well.</h2>
        <div id="the-stick-anchor"></div>
        <div id="the-stick">
            <div id="details" class="form-horizontal hidden">
                <div class="form-group row">
                    <label class="col-sm-2 control-label">Client</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" id="name"></p>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 control-label">Database</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" id="database"></p>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 control-label">Date</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" id="date"></p>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 control-label">Host</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" id="host"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>