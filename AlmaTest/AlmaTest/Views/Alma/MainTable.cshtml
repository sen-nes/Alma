                <input id="client-name" class="form-control" type="text" name="client" @if (Model.Client != null) { string value = "value=" + Model.Client;} placeholder="Клиент..." data-provide="typeahead"/>
            </div>
            <button type="submit" class="btn btn-primary">Търси</button>
        </form>
    </div>
</div>

