                    <th>Хост</th>
                    <th>Дата</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr id="@client.ID">
                        <td>@client.Client</td>
                        <td>@client.Baza</td>
                        <td>@client.HostName</td>
                        <td>
                            @{
